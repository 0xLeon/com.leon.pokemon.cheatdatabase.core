<div class="messageSidebar"{if $this->getStyle()->getVariable('messages.sidebar.alignment') == 'top'} style="min-height: 110px;"{/if}>	<p class="skipSidebar hidden"><a href="#skipPoint{@$entry->messageID}" title="{lang}wcf.message.sidebar.skip{/lang}">{lang}wcf.message.sidebar.skip{/lang}</a></p>	<div class="messageAuthor">		<p class="userName">{$entry->pokemonName}</p>				{if $additionalSidebarPokemonInformation[$entry->messageID]|isset}{@$additionalSidebarPokemonInformation[$entry->messageID]}{/if}	</div>		<div class="userAvatar{if $this->getStyle()->getVariable('messages.sidebar.avatar.framed')}Framed{/if}">		<img src="{$entry->getSpritePath()}" alt="" style="width: 96px; height: 96px;{if $this->getStyle()->getVariable('messages.sidebar.avatar.framed')} margin-top: -48px; margin-left: -48px{/if}" />	</div>		<div class="userSymbols">		<ul>			<li><img src="{$entry->getBallIconPath()}" alt="{$entry->ballName}" title="{$entry->ballName}" /></li>		</ul>	</div></div>